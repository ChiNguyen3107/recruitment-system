# ========== JWT SECURITY ==========
# Bắt buộc: JWT Secret key (tối thiểu 32 ký tự)
JWT_SECRET=YourVerySecureJWTSecretKeyThatIsAtLeast32CharactersLong

# Tùy chọn: Thời gian hết hạn token (milliseconds)
JWT_ACCESS_EXPIRATION=900000
JWT_REFRESH_EXPIRATION=2592000000

# ========== RATE LIMITING ==========
# Giới hạn số lần đăng nhập
RATE_LIMIT_LOGIN=5
RATE_LIMIT_LOGIN_WINDOW=300

# Giới hạn số lần đăng ký
RATE_LIMIT_REGISTER=3
RATE_LIMIT_REGISTER_WINDOW=3600

# ========== SECURITY HEADERS ==========
SECURITY_HEADERS_ENABLED=true

# ========== CORS CONFIGURATION ==========
# Các domain được phép truy cập (phân cách bằng dấu phẩy)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# ========== DATABASE ==========
DB_URL=jdbc:mysql://localhost:3306/recruitment_db?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=Asia/Ho_Chi_Minh
DB_USERNAME=root
DB_PASSWORD=your_password_here













